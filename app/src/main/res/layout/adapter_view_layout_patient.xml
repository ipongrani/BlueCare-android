<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patienName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Patient Name"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/medicalID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Mediacal ID"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bloodType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Blood Type"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bloodPressure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Blood Pressure"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/allergies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Allergies"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Diet"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Pill"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timePill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Time Pill / day"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/medicalIssue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Medical Issue"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/conditionTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="25"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Conditions"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Condition"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Status"
            android:textColor="@color/blueRose"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50">
        <TextView
            android:id="@+id/dataPatientName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataAge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataBloodType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataAllergies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataDiet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataPill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataTimePill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataMedIssue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:background="@drawable/border_menu_h"
            />
        <TextView
            android:id="@+id/nothing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/dataCondition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dataStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="25"
            android:background="@drawable/border_menu_h"
            android:fontFamily="@font/opensans_regular"
            android:padding="12dp"
            android:text="Something"
            android:textColor="@color/Black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>